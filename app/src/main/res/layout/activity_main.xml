<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="55"
        tools:context=".MainActivity" android:orientation="vertical">
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:gravity="center"
			android:weightSum="20"
			android:layout_height="0dp" android:layout_weight="5">
		<TextView
				android:text=""
				android:textSize="20dp"
				android:layout_width="0dp"
				android:textColor="@color/colorPrimary"
				android:gravity="right"
				android:layout_weight="18"
				android:layout_height="wrap_content" android:id="@+id/operator"/>
		<Space
				android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="2"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:gravity="center"
			android:weightSum="20"
			android:layout_weight="10">
		<TextView
				android:text="0"
				android:textSize="50dp"
				android:gravity="right"
				android:textColor="@color/colorPrimary"
				android:layout_weight="18"
				android:layout_width="0dp"
				android:layout_height="wrap_content" android:id="@+id/result"/>
		<Space
				android:layout_width="0dp"
				android:layout_height="wrap_content" android:layout_weight="2"/>
	</LinearLayout>
	<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="10">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:gravity="center"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1" >
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
			<Button
					android:text="7"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:layout_height="0dp" android:id="@+id/button7"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="8"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_width="match_parent"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button8"/>
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="9"
					android:textSize="30dp"
					android:layout_width="match_parent"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button9"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
			<Button
					android:text="/"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:background="@drawable/button1"
					android:layout_height="0dp" android:id="@+id/buttonDivision" />
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:weightSum="4"
			android:layout_weight="10">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:gravity="center"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1" >
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
			<Button
					android:text="4"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:layout_height="0dp" android:id="@+id/button4"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="5"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_width="match_parent"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button5"/>
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="6"
					android:textSize="30dp"
					android:layout_width="match_parent"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button6"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
			<Button
					android:text="x"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:background="@drawable/button1"
					android:layout_height="0dp" android:id="@+id/buttonMultiply" />
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:weightSum="4"
			android:layout_weight="10">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:gravity="center"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1" >
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
			<Button
					android:text="1"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:layout_height="0dp" android:id="@+id/button1"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="2"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_width="match_parent"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button2"/>
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="3"
					android:textSize="30dp"
					android:layout_width="match_parent"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button3"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
			<Button
					android:text="-"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:background="@drawable/button1"
					android:layout_height="0dp" android:id="@+id/buttonMinus" />
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:weightSum="4"
			android:layout_weight="10">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:gravity="center"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
			<Button
					android:text="C"
					android:textSize="30dp"
					android:background="@drawable/button3"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:layout_height="0dp" android:id="@+id/buttonClear"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="0"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:background="@drawable/button2"
					android:layout_width="match_parent"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/button0"/>
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"/>
			<Button
					android:text="="
					android:textSize="30dp"
					android:layout_width="match_parent"
					android:background="@drawable/button3"
					android:layout_weight="6"
					android:layout_height="0dp" android:id="@+id/buttonEqual"/>
			<Space
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:weightSum="8"
				android:layout_height="match_parent" android:layout_weight="1">
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
			<Button
					android:text="+"
					android:textSize="30dp"
					android:textColor="@color/colorPrimary"
					android:layout_weight="6"
					android:layout_width="match_parent"
					android:background="@drawable/button1"
					android:layout_height="0dp" android:id="@+id/buttonPlus" />
			<Space
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>